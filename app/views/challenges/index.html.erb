<div class="options">

  <% @challenges.each do |challenge| %>

    <div class="option" style="--optionBackground: linear-gradient(rgba(200, 200, 200, 0.5), rgba(0, 100, 100, 0.5)), url(<%= challenge.photo %>);">
<!--       <div class="text"><%= challenge.description %></div>
 -->
      <%= link_to challenge_path(challenge.id) do %>
        <div class="label">
          <div class="icon"><img src="<%= challenge.badge %>" alt="badge"></div>
          <div class="info">
            <div class="main"><%= challenge.title %></div>
            <div class="sub"><%= challenge.date.strftime("%B") %></div>
          </div>
        </div>
      <% end %>

    </div>

  <% end %>


