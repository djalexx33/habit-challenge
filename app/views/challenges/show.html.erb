<div id="parallax-world-of-ugg">
  <section>
    <div class="parallax-two" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @challenge.photo %>)">
    <div class="container">
      <div class="banner">
      <div class="banner-index-content">
        <h1><span id="hashtag">#</span><%= @challenge.title %></h1>
        <div class="button-banner-show">
          <% if user_signed_in? %>
            <% if @challenge.inscriptions.where(user: current_user).present? %>
              <%= link_to "Go to your dashboard", user_path(@user), class: "btn btn-primary btn-lg light-white-button" %>
              <!-- <button type="button" class="btn btn-primary btn-lg light-white-button">
                Go to your dashboard
              </button> -->
            <% else %>
              <%= link_to "Subscribe to the challenge", challenge_inscriptions_path(@challenge), method: :post, remote: :true, class: "btn btn-primary btn-lg light-white-button button-challenge" %>
            <% end %>
            <button type="button" class="btn btn-primary btn-lg light-white-button button-challenge-execute" data-toggle="modal" data-target="#modal-challenge">
              Subscribe to the challenge
            </button>
            <%= render "shared/popup_challenge" %>
          <% else %>
          <button type="button" class="btn btn-primary btn-lg light-white-button" data-toggle="modal" data-target="#exampleModal">
              Subscribe to challenge
          </button>
          <%= render "shared/login_form" %>
          <%#= link_to "Subscribe to the challenge",new_user_session_path, class: "btn btn-primary btn-lg light-white-button" %>
          <%#= render "shared/login_form" %>
          <% end %>
        </div>
      </div>
      <div class="banner-show-description">
          <p><%= @challenge.description %></p>
      </div>
    </div>
  </div>
  </section>
  </div>
</div>

