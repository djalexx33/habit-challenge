
<div class="modal fade popup-challenge" id="modal-challenge" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <h1 class="mb-3">Congrats !</h1>
        <h3 class="mt-3">You just join the challenge</h3>
        <h2 class="text-center mt-4 mb-4"><%= @challenge.title %></h2>
        <h3 class="mb-3">Share it with your friend</h3>
        <a href="#" class="social"><i class="fab fa-fw fa-facebook-f"></i></a>
        <a href="#" class="social"><i class="fab fa-fw fa-twitter"></i></a>
        <a href="#" class="social"><i class="fab fa-fw fa-instagram"></i></a></br>

        <% if @user %>
          <%= link_to "Go to your dashboard", user_path(@user), class: "btn btn-primary btn-lg light-main-button mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
