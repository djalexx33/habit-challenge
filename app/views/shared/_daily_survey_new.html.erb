<div class="modal fade popup-survey" id="modal-survey-new" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h1>Day <%= Date.today.strftime("%d") %></h1>

        <%= simple_form_for [inscription, daily_survey] do |f| %>
          <% questions.each do |question| %>
          <h5><%= question.title %></h5>
            <%= f.simple_fields_for :daily_answers, DailyAnswer.new do |i| %>
              <%= i.collection_radio_buttons :option_id, question.options, :id, :title %>
            <% end %>
          <% end %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
