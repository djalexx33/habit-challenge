<%#= link_to "See your Review of the day", new_inscription_daily_survey_path(62), class: "btn btn-primary main-button" %>

<% current_user.inscriptions.each do |inscription| %>
  <% inscription.daily_surveys.each do |daily_survey| %>
    <article class="surveys-dashboard-card2">
      <div class="thumb" style="background: url(<%= inscription.challenge.photo %>)"></div>
      <div class="infos">
        <h2 class="title"><%= inscription.challenge.title %><span class="flag"></span></h2>
        <h3 class="date">Day <%= daily_survey.created_at.strftime("%d") %></h3>
        <p class="txt">
          Click in the link below to access to
          your daily survey!
        </p>
        <%#= link_to "Check your survey", daily_survey_path(daily_survey), class: "btn btn-primary main-button" %>
        <button type="button" class="btn btn-primary main-button survey-button-click" data-toggle="modal" data-target="#modal-survey-show">
            Check your survey
        </button>
        <%= render "shared/daily_survey_show", daily_answers: daily_survey.daily_answers, daily_survey: daily_survey%>
      </div>
    </article>
  <% end %>
    <% unless DailySurvey.find_by(inscription: inscription, date: Date.today) %>
      <article class="surveys-dashboard-card2">
        <div class="thumb"></div>
        <div class="infos">
          <h2 class="title"><%= inscription.challenge.title %><span class="flag"></span></h2>
          <h3 class="date">Day <%= Date.today.strftime("%d") %></h3>
          <p class="txt">
            Click in the link below to answer
            your daily survey!
          </p>
          <%#= link_to "Answer your Review of the day", new_inscription_daily_survey_path(inscription), class: "btn btn-primary main-button" %>
          <button type="button" class="btn btn-primary main-button" data-toggle="modal" data-target="#modal-survey-new">
              Answer your Review of the day
          </button>
          <%= render "shared/daily_survey_new", questions: inscription.challenge.questions, inscription: inscription, daily_survey: DailySurvey.new %>
        </div>
      </article>
    <% end %>
<% end %>
